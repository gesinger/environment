
# Start environment customization

D=$'\e[37;40m'
PINK=$'\e[35;40m'
GREEN=$'\e[32;40m'
ORANGE=$'\e[33;40m'

export PS1="\n\n${PINK}\u ${D}at ${ORANGE}\H ${D}in ${GREEN}\w ${D}\n\$ "

alias gits='git status'
alias gitd='git diff --color'

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$PATH:$HOME/bin"
fi

# 3 finger tap on touchpad is middle click
synclient TapButton3=2
